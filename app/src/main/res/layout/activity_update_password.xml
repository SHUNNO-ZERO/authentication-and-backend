<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".UpdatePassword">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1stid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2ndid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtext_oldpassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="      Give Old Password"

        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1stid"
        app:layout_constraintRight_toLeftOf="@+id/guideline2ndid"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtext_newpassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:background="@drawable/et_bg"
        android:hint="      Confirm Your New Password"
        android:textSize="18sp"

        app:layout_constraintLeft_toLeftOf="@+id/guideline1stid"
        app:layout_constraintRight_toLeftOf="@id/guideline2ndid"
        app:layout_constraintTop_toBottomOf="@+id/edtext_oldpassword" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtext_confirmnewpassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="      Give Uour New Password"
        android:textSize="18sp"

        app:layout_constraintLeft_toLeftOf="@+id/guideline1stid"
        app:layout_constraintRight_toLeftOf="@id/guideline2ndid"
        app:layout_constraintTop_toBottomOf="@+id/edtext_newpassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_saveid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:text="Save"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#090909"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1stid"
        app:layout_constraintRight_toLeftOf="@id/guideline2ndid"
        app:layout_constraintTop_toBottomOf="@+id/edtext_confirmnewpassword" />


</androidx.constraintlayout.widget.ConstraintLayout>
