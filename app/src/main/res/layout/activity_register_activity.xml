<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:fillViewport="true"
    tools:context=".Register_activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">








    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1st"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent=".1"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2st"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent=".9"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_name"
        android:layout_width="250dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"

        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="      Name"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_phone"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"

        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="      Phone"


        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toBottomOf="@+id/edit_name" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:hint="      Email"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toBottomOf="@+id/edit_phone" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_userid"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:background="@drawable/et_bg"
        android:hint="      User Id"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toBottomOf="@+id/edit_email" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="      Password"

        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toBottomOf="@+id/edit_userid" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_repassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:hint="      Repassword"

        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toBottomOf="@+id/edit_password" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_webaddress"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#535353"
        android:background="@drawable/et_bg"
        android:hint="      Give Your Web Address"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toBottomOf="@+id/edit_repassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/transparent"

        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="Register"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1st"
        app:layout_constraintRight_toLeftOf="@+id/guideline2st"
        app:layout_constraintTop_toBottomOf="@+id/edit_webaddress" />


    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>